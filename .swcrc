{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true
    },
    "target": "es2020",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@common/*": ["./src/common/*"],
      "@infra/*":  ["./src/infrastructure/*"]
    },
    "baseUrl": "."
  },
  "module": {
    "type": "commonjs"
  }
}
